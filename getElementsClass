  'es6 async demo Test': async function(browser) {
     result = await browser.elements('css selector', 'input');
     console.log('result value is:', result);


browser.elements('css selector', 'input', function(elements) {
  elements.value.forEach(function(element){
    browser.elementIdAttribute(element.ELEMENT, 'class', function(attribute) {
      console.log('ddd '+ attribute.value);
    });
  });
});



browser.elementIdAttribute(result.value[4].ELEMENT, 'class', function(attribute) {
      console.log('im class 4 : '+ attribute.value);
      console.log('im object 5 : ', result.value[5]);
      browser.end();
    });


    
  },


};

